{
  "name": "ola-code-buddy",
  "displayName": "CodeBuddy: Your AI Coding Assistant",
  "author": {
    "name": "Oyinlola Olasunkanmi Raymond",
    "email": "oyinolasunkanmi@gmail.com",
    "url": "https://fiatinnovations.com"
  },
  "publisher": "fiatinnovations",
  "description": "",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.78.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/olasunkanmi-SE/codebuddy"
  },
  "gallery": {
    "icon": "codebuddy.png"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "chatView",
          "name": "Chat"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "ola.commentCode",
          "group": "CodeBuddy"
        },
        {
          "when": "editorHasSelection",
          "command": "ola.reviewCode",
          "group": "CodeBuddy"
        },
        {
          "when": "editorHasSelection",
          "command": "ola.codeRefactor",
          "group": "CodeBuddy"
        },
        {
          "when": "editorHasSelection",
          "command": "ola.codeOptimize",
          "group": "CodeBuddy"
        },
        {
          "when": "editorHasSelection",
          "command": "ola.explain",
          "group": "CodeBuddy"
        },
        {
          "when": "editorHasSelection",
          "command": "ola.sendChatMessage",
          "group": "CodeBuddy"
        }
      ]
    },
    "commands": [
      {
        "command": "ola.commentCode",
        "title": "Ola. Add comment to selected code."
      },
      {
        "command": "ola.reviewCode",
        "title": "Ola. Review these selected code."
      },
      {
        "command": "ola.codeRefactor",
        "title": "Ola. Refactor these selected code."
      },
      {
        "command": "ola.codeOptimize",
        "title": "Ola. Optimize these selected code."
      },
      {
        "command": "ola.sendChatMessage",
        "title": "Send to Ola"
      },
      {
        "command": "ola.explain",
        "title": "Ola. Explain this code"
      }
    ],
    "configuration": [
      {
        "title": "Your codding buddy, Ola",
        "properties": {
          "generativeAi.option": {
            "type": "string",
            "enum": [
              "Gemini",
              "Groq"
            ],
            "default": "Groq",
            "description": "Select the Generative AI to use with code buddy"
          },
          "google.gemini.apiKeys": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "Enter your [API Key](https://aistudio.google.com/app/apikey) for Gemini."
          },
          "google.gemini.model": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "Provide the name of the model you want to use. Choose from the [base models](https://ai.google.dev/models/gemini) or your own [tuned model](https://ai.google.dev/docs/model_tuning_guidance)."
          },
          "groq.llama3.apiKey": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "Enter your [API Key](https://console.groq.com/keys) Groq"
          },
          "groq.llama3.model": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "Provide the name of the Groq model you want to use. Choose from the ..."
          },
          "font.family": {
            "type": "string",
            "enum": [
              "Montserrat",
              "SF Mono"
            ],
            "default": "SF Mono",
            "description": "Select preffered font family"
          },
          "chatview.theme": {
            "type": "string",
            "enum": [
              "Atom One Dark",
              "Atom One Dark Reasonable",
              "Code Pen",
              "felipec",
              "github dark",
              "ir black",
              "night owl",
              "stackoverflow",
              "tokyo night"
            ],
            "default": "Atom One Dark",
            "description": "Select preffered chat view theme"
          },
          "chatview.font.size": {
            "type": [
              "string",
              "number"
            ],
            "default": 16,
            "description": "Enter your preferred font size (default is 16)"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "format": "prettier --write \"**/*.ts\"",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/markdown-it": "^13.0.7",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/readable-stream": "^4.0.11",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.2",
    "@vscode/vsce": "^2.27.0",
    "add": "^2.0.6",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "or": "^0.2.0",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.6",
    "@google/generative-ai": "^0.3.0",
    "@types/node-fetch": "^2.6.11",
    "dotenv": "^16.1.4",
    "groq-sdk": "^0.3.2",
    "markdown-it": "^14.1.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.2.5",
    "readable-stream": "^4.5.2",
    "sinon": "^17.0.1"
  }
}
