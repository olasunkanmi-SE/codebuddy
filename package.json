{
  "name": "ola-code-buddy",
  "displayName": "CodeBuddy: Your AI Coding Assistant",
  "author": {
    "name": "Oyinlola Olasunkanmi Raymond",
    "email": "oyinolasunkanmi@gmail.com",
    "url": "https://github.com/olasunkanmi-SE/codebuddy"
  },
  "publisher": "fiatinnovations",
  "description": "CodeBuddy is a Visual Studio Code extension that enhances developer productivity through AI-powered code assistance. It provides intelligent code review, refactoring suggestions, optimization tips, and interactive chat capabilities powered by multiple AI models including Gemini, Groq, Anthropic, and Deepseek.",
  "version": "3.7.31",
  "engines": {
    "vscode": "^1.78.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/olasunkanmi-SE/codebuddy"
  },
  "icon": "images/codebuddylogo.png",
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Linters",
    "AI",
    "Chat",
    "Machine Learning",
    "Education",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "keywords": [
    "ai",
    "code assistant",
    "code review",
    "code optimization",
    "developer tools",
    "productivity"
  ],
  "homepage": "https://github.com/olasunkanmi-SE/codebuddy#readme",
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "codeBuddy-view-container": [
        {
          "icon": "images/codebuddylogo.png",
          "type": "webview",
          "id": "chatView",
          "name": "Chat"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "command": "codebuddy.applyChange",
          "group": "navigation",
          "when": "resourceScheme == codebuddy-diff"
        },
        {
          "command": "codebuddy.rejectChange",
          "group": "navigation",
          "when": "resourceScheme == codebuddy-diff"
        }
      ],
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "CodeBuddy.commentCode",
          "group": "CodeBuddy"
        },
        {
          "when": "editorHasSelection",
          "command": "CodeBuddy.reviewCode",
          "group": "CodeBuddy"
        },
        {
          "when": "editorHasSelection",
          "command": "CodeBuddy.codeRefactor",
          "group": "CodeBuddy"
        },
        {
          "when": "editorHasSelection",
          "command": "CodeBuddy.codeOptimize",
          "group": "CodeBuddy"
        },
        {
          "when": "editorHasSelection",
          "command": "CodeBuddy.explain",
          "group": "CodeBuddy"
        },
        {
          "command": "CodeBuddy.generateCommitMessage",
          "group": "CodeBuddy"
        },
        {
          "command": "CodeBuddy.inLineChat",
          "group": "CodeBuddy"
        },
        {
          "when": "editorHasSelection",
          "command": "CodeBuddy.interviewMe",
          "group": "CodeBuddy"
        },
        {
          "when": "editorHasSelection",
          "command": "CodeBuddy.generateMermaidDiagram",
          "group": "CodeBuddy"
        },
        {
          "command": "CodeBuddy.codebaseAnalysis",
          "group": "CodeBuddy"
        },
        {
          "command": "CodeBuddy.reviewPR",
          "group": "CodeBuddy"
        },
        {
          "command": "CodeBuddy.rules.open",
          "group": "CodeBuddy@9"
        },
        {
          "command": "CodeBuddy.rules.init",
          "group": "CodeBuddy@9"
        }
      ]
    },
    "commands": [
      {
        "command": "codebuddy.indexWorkspace",
        "title": "CodeBuddy: Index Workspace for Semantic Search"
      },
      {
        "command": "CodeBuddy.commentCode",
        "title": "CodeBuddy. Add comment to selected code."
      },
      {
        "command": "CodeBuddy.reviewCode",
        "title": "CodeBuddy. Review these selected code."
      },
      {
        "command": "CodeBuddy.codeRefactor",
        "title": "CodeBuddy. Refactor these selected code."
      },
      {
        "command": "CodeBuddy.codeOptimize",
        "title": "CodeBuddy. Optimize these selected code."
      },
      {
        "command": "CodeBuddy.explain",
        "title": "CodeBuddy. Explain this code"
      },
      {
        "command": "CodeBuddy.generateCommitMessage",
        "title": "CodeBuddy. Generate commit message"
      },
      {
        "command": "CodeBuddy.inLineChat",
        "title": "CodeBuddy. Inline chat"
      },
      {
        "command": "CodeBuddy.interviewMe",
        "title": "CodeBuddy. Interview Me."
      },
      {
        "command": "CodeBuddy.generateMermaidDiagram",
        "title": "CodeBuddy. Generate Architectural Diagram."
      },
      {
        "command": "CodeBuddy.codebaseAnalysis",
        "title": "CodeBuddy. Analyze Codebase & Answer Questions"
      },
      {
        "command": "CodeBuddy.reviewPR",
        "title": "CodeBuddy. Review Pull Request"
      },
      {
        "command": "CodeBuddy.rules.open",
        "title": "CodeBuddy: Open Project Rules"
      },
      {
        "command": "CodeBuddy.rules.init",
        "title": "CodeBuddy: Initialize Project Rules"
      },
      {
        "command": "CodeBuddy.rules.reload",
        "title": "CodeBuddy: Reload Project Rules"
      },
      {
        "command": "codebuddy.completion.toggle",
        "title": "CodeBuddy: Toggle Inline Completions"
      },
      {
        "command": "codebuddy.completion.openSettings",
        "title": "CodeBuddy: Configure Completion Settings"
      },
      {
        "command": "codebuddy.applyChange",
        "title": "Apply Change",
        "icon": "$(check)"
      },
      {
        "command": "codebuddy.rejectChange",
        "title": "Discard Change",
        "icon": "$(close)"
      }
    ],
    "keybindings": [
      {
        "command": "CodeBuddy.commentCode",
        "key": "ctrl+shift+j",
        "mac": "cmd+shift+j",
        "when": "editorHasSelection"
      },
      {
        "command": "CodeBuddy.reviewCode",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorHasSelection"
      },
      {
        "command": "CodeBuddy.codeRefactor",
        "key": "ctrl+shift+;",
        "mac": "cmd+shift+;",
        "when": "editorHasSelection"
      },
      {
        "command": "CodeBuddy.codeOptimize",
        "key": "ctrl+shift+0",
        "mac": "cmd+shift+0",
        "when": "editorHasSelection"
      },
      {
        "command": "CodeBuddy.explain",
        "key": "ctrl+shift+1",
        "mac": "cmd+shift+1",
        "when": "editorHasSelection"
      },
      {
        "command": "CodeBuddy.generateCommitMessage",
        "key": "ctrl+shift+2",
        "mac": "cmd+shift+2"
      },
      {
        "command": "CodeBuddy.inLineChat",
        "key": "ctrl+shift+8",
        "mac": "cmd+shift+8"
      },
      {
        "command": "CodeBuddy.generateMermaidDiagram",
        "key": "ctrl+shift+7",
        "mac": "cmd+shift+7",
        "when": "editorHasSelection"
      },
      {
        "command": "CodeBuddy.codebaseAnalysis",
        "key": "ctrl+shift+6",
        "mac": "cmd+shift+6"
      },
      {
        "command": "CodeBuddy.rules.open",
        "key": "ctrl+shift+9",
        "mac": "cmd+shift+9"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeBuddy-view-container",
          "title": "CodeBuddy",
          "icon": "$(chat-editor-label-icon)"
        }
      ]
    },
    "configuration": [
      {
        "title": "CodeBuddy",
        "properties": {
          "generativeAi.option": {
            "type": "string",
            "enum": [
              "Gemini",
              "Groq",
              "Anthropic",
              "XGrok",
              "Deepseek",
              "OpenAI",
              "Qwen",
              "GLM",
              "Local"
            ],
            "default": "Gemini",
            "description": "Select Model"
          },
          "tavily.apiKey": {
            "type": [
              "string",
              "null"
            ],
            "default": "apiKey",
            "markdownDescription": "Enter your [API Key](https://app.tavily.com/home) for Tavily."
          },
          "google.gemini.apiKeys": {
            "type": [
              "string",
              "null"
            ],
            "default": "apiKey",
            "markdownDescription": "Enter your [API Key](https://aistudio.google.com/app/apikey) for Gemini."
          },
          "google.gemini.model": {
            "type": [
              "string",
              "null"
            ],
            "default": "gemini-2.5-pro",
            "markdownDescription": "Provide the name of the model you want to use. Choose from the [base models](https://ai.google.dev/models/gemini) or your own [tuned model](https://ai.google.dev/docs/model_tuning_guidance)."
          },
          "groq.llama3.apiKey": {
            "type": [
              "string",
              "null"
            ],
            "default": "apiKey",
            "markdownDescription": "Enter your [API Key](https://console.groq.com/keys) Groq"
          },
          "groq.llama3.model": {
            "type": [
              "string",
              "null"
            ],
            "default": "llama-3.1-70b-versatile",
            "markdownDescription": "Provide the name of the Groq model you want to use. Choose from the ..."
          },
          "anthropic.model": {
            "type": [
              "string",
              "null"
            ],
            "default": "claude-sonnet-4-5",
            "markdownDescription": "Provide the name of the Anthropic model you want to use. Choose from the ..."
          },
          "anthropic.apiKey": {
            "type": [
              "string",
              "null"
            ],
            "default": "apiKey",
            "markdownDescription": "Enter your [API Key](https://docs.anthropic.com/en/docs/about-claude/models) Anthropic"
          },
          "deepseek.model": {
            "type": [
              "string",
              "null"
            ],
            "default": "deepseek-chat",
            "markdownDescription": "Provide the name of the Deepseek model you want to use (e.g., deepseek-chat (V3), deepseek-reasoner (R1))."
          },
          "deepseek.apiKey": {
            "type": [
              "string",
              "null"
            ],
            "default": "apiKey",
            "markdownDescription": "Enter your Deepseek API Key"
          },
          "qwen.model": {
            "type": [
              "string",
              "null"
            ],
            "default": "qwen-max",
            "markdownDescription": "Provide the name of the Qwen model you want to use (e.g., qwen-max, qwen-plus, qwen3-coder-plus, qwen3-coder-max)."
          },
          "qwen.apiKey": {
            "type": [
              "string",
              "null"
            ],
            "default": "apiKey",
            "markdownDescription": "Enter your Qwen (DashScope) API Key"
          },
          "glm.model": {
            "type": [
              "string",
              "null"
            ],
            "default": "glm-4",
            "markdownDescription": "Provide the name of the GLM model you want to use (e.g., glm-4, glm-4-plus, glm-4v)."
          },
          "glm.apiKey": {
            "type": [
              "string",
              "null"
            ],
            "default": "apiKey",
            "markdownDescription": "Enter your GLM (Zhipu AI) API Key"
          },
          "openai.model": {
            "type": [
              "string",
              "null"
            ],
            "default": "gpt-4o",
            "markdownDescription": "Provide the name of the OpenAI model you want to use."
          },
          "openai.apiKey": {
            "type": [
              "string",
              "null"
            ],
            "default": "apiKey",
            "markdownDescription": "Enter your OpenAI API Key"
          },
          "local.model": {
            "type": [
              "string",
              "null"
            ],
            "default": "qwen2.5-coder",
            "markdownDescription": "Provide the name of the Local model you want to use (e.g., qwen2.5-coder, llama3.2, gemma3, mistral)."
          },
          "local.baseUrl": {
            "type": [
              "string",
              "null"
            ],
            "default": "http://localhost:11434/v1",
            "markdownDescription": "Enter the Base URL for your Local LLM. For Ollama use http://localhost:11434/v1, for Docker Model Runner use http://localhost:12434/engines/llama.cpp/v1."
          },
          "local.apiKey": {
            "type": [
              "string",
              "null"
            ],
            "default": "not-needed",
            "markdownDescription": "Enter your Local LLM API Key (if required)."
          },
          "font.family": {
            "type": "string",
            "enum": [
              "Montserrat",
              "SF Mono",
              "Space Mono",
              "Fira Code",
              "Source Code Pro",
              "JetBrains Mono",
              "Roboto Mono",
              "Ubuntu Mono",
              "IBM Plex Mono",
              "Inconsolata"
            ],
            "default": "JetBrains Mono",
            "description": "Select preffered font family"
          },
          "chatview.theme": {
            "type": "string",
            "enum": [
              "Atom One Dark",
              "Atom One Dark Reasonable",
              "Code Pen",
              "felipec",
              "github dark",
              "ir black",
              "night owl",
              "stackoverflow",
              "tokyo night"
            ],
            "default": "Atom One Dark",
            "description": "Select preffered chat view theme"
          },
          "chatview.font.size": {
            "type": [
              "string",
              "number"
            ],
            "default": 16,
            "description": "Enter your preferred font size (default is 16)"
          },
          "codebuddy.completion.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable inline code completions (ghost text)"
          },
          "codebuddy.completion.provider": {
            "type": "string",
            "enum": [
              "Gemini",
              "Groq",
              "Anthropic",
              "Deepseek",
              "OpenAI",
              "Qwen",
              "GLM",
              "Local"
            ],
            "default": "Local",
            "description": "Provider for inline completions (can be different from chat provider)"
          },
          "codebuddy.completion.model": {
            "type": "string",
            "default": "qwen2.5-coder",
            "description": "Model to use for completions (e.g., qwen2.5-coder, deepseek-coder)"
          },
          "codebuddy.completion.apiKey": {
            "type": ["string", "null"],
            "default": "",
            "description": "API key for completion provider (optional, falls back to main key if empty)"
          },
          "codebuddy.completion.debounceMs": {
            "type": "number",
            "default": 300,
            "minimum": 50,
            "description": "Delay in milliseconds before triggering a completion"
          },
          "codebuddy.completion.maxTokens": {
            "type": "number",
            "default": 128,
            "description": "Maximum tokens to generate for a completion"
          },
          "codebuddy.completion.triggerMode": {
            "type": "string",
            "enum": ["automatic", "manual"],
            "default": "automatic",
            "description": "How completions are triggered (automatic on type, or manual hotkey)"
          },
          "codebuddy.completion.multiLine": {
            "type": "boolean",
            "default": true,
            "description": "Allow multi-line completions"
          },
          "codebuddy.rules.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable project rules from .codebuddy/rules.md file"
          },
          "codebuddy.rules.maxTokens": {
            "type": "number",
            "default": 2000,
            "description": "Maximum tokens allowed for project rules (rules exceeding this will be truncated)"
          },
          "codebuddy.rules.showIndicator": {
            "type": "boolean",
            "default": true,
            "description": "Show indicator in UI when project rules are active"
          },
          "rules.customRules": {
            "type": "array",
            "default": [],
            "description": "Custom rules for code generation. Each rule is appended to the agent's system prompt.",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "name": { "type": "string" },
                "description": { "type": "string" },
                "content": { "type": "string" },
                "enabled": { "type": "boolean" },
                "createdAt": { "type": "number" }
              }
            }
          },
          "rules.customSystemPrompt": {
            "type": "string",
            "default": "",
            "description": "Additional instructions appended to the base system prompt"
          },
          "rules.subagents": {
            "type": "object",
            "default": {},
            "description": "Subagent configuration. Keys are subagent IDs, values contain enabled state.",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" }
              }
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "package": "node esbuild.js --production",
    "build": "npm run compile && npm run format && npm run build:webview && npm run package",
    "dev:webview": "cd webviewUi && npm run dev",
    "build:webview": "cd webviewUi && npm run build",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "format": "prettier --write \"**/*.ts\"",
    "fix-chromadb": "npm uninstall chromadb && npm install chromadb@1.8.1",
    "setup-chromadb-server": "echo 'Install ChromaDB server: pip install chromadb' && echo 'Start server: chroma run --host localhost --port 8000'"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "@types/markdown-it": "^13.0.7",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/readable-stream": "^4.0.11",
    "@types/sinon": "^17.0.3",
    "@types/sql.js": "^1.4.9",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.2",
    "esbuild": "^0.25.8",
    "eslint": "^8.41.0",
    "mocha": "^10.2.0",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@chroma-core/default-embed": "^0.1.8",
    "@google/genai": "^0.7.0",
    "@google/generative-ai": "^0.21.0",
    "@langchain/anthropic": "^1.0.0",
    "@langchain/core": "^1.0.0",
    "@langchain/groq": "^1.0.2",
    "@langchain/langgraph": "^1.0.0",
    "@langchain/langgraph-checkpoint-sqlite": "^1.0.0",
    "@langchain/openai": "^1.2.4",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@mozilla/readability": "^0.4.1",
    "@types/fast-levenshtein": "^0.0.4",
    "@types/node-fetch": "^2.6.11",
    "@types/sql.js": "^1.4.9",
    "@vscode/ripgrep": "^1.17.0",
    "apache-arrow": "18.1.0",
    "axios": "^1.7.9",
    "deepagents": "^1.1.1",
    "dompurify": "^3.2.6",
    "dotenv": "^16.1.4",
    "fast-levenshtein": "^3.0.0",
    "groq-sdk": "^0.22.0",
    "jsdom": "^26.0.0",
    "langchain": "^1.0.4",
    "llama3-tokenizer-js": "^1.2.0",
    "lru-cache": "^11.2.2",
    "markdown-it": "^14.1.0",
    "natural": "^8.1.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.28.0",
    "prettier": "^3.2.5",
    "readable-stream": "^4.5.2",
    "simple-git": "^3.25.0",
    "sinon": "^17.0.1",
    "sql.js": "^1.13.0",
    "web-tree-sitter": "^0.25.10"
  },
  "license": "MIT"
}
